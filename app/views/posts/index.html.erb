<div class="card-deck">
	<% @posts.each do |post| %>
	  <div class="card">
	    <% image_tag ("error.svg"), class: "card-img-top" %>
	    <div class="card-body">
	      <h5 class="card-title"><%= link_to post.title, post %></h5>
	      <p class="card-text"><%= post.content %></p>
	    </div>
	    <div class="card-footer">
	      <small class="text-muted">Last updated 4 mins ago</small>
	    </div>
	  </div>
  	<% end %>
</div>